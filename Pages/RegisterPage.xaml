<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:TaskManagementApp.ViewModels"
             x:Class="TaskManagementApp.Pages.RegisterPage"
             x:DataType="viewmodels:RegisterViewModel"
             Title="RegisterPage">

    <ContentPage.BindingContext>
        <viewmodels:RegisterViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label 
            Text="Sign up"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry Placeholder="Login"
               Text="{Binding Login, Mode=OneWayToSource}" />

        <Entry Placeholder="Team"
               Text="{Binding Team, Mode=OneWayToSource}"/>

        <Entry Placeholder="Password"
               Text="{Binding Password, Mode=OneWayToSource}"/>

        <Entry Placeholder="Confirm Password"
               Text="{Binding ConfirmPassword, Mode=OneWayToSource}"/>

        <Button Text="Sign Up"
                Command="{Binding RegisterCommand}"/>

    </VerticalStackLayout>
</ContentPage>

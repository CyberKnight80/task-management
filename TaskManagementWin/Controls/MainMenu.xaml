<UserControl x:Class="TaskManagementWin.Controls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManagementWin.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Home" Command="{Binding GoToHomePageCommand}" />
            <MenuItem Header="Teams" Command="{Binding GoToTeamsPageCommand}" />
            <MenuItem Header="Log Out" Command="{Binding LogoutCommand}" />
        </Menu>
    </DockPanel>
</UserControl>
